@*The prototyping helper allows us to build fast demo code*@
@using Prototyping.Ipsum
@using Prototyping.Placeholdit
@*Begin showcase*@
<div id="showcase">
    <div class="row">
        <div class="six columns">@Html.Ipsum().h1().h4(wordCount: 8)
            <p class="action">
                <a href="#" class="nice large orange button">Donate Now</a>
            </p>
        </div>
        <div class="six columns">
            <div id="rotator">
                @Html.Placehold(width: 468, height: 304, text: "product slide 1", backgroundColor:"A7D5F2")
                @Html.Placehold(width: 468, height: 304, text: "product slide 2", backgroundColor:"F2B807")
                @Html.Placehold(width: 468, height: 304, text: "product slide 3", backgroundColor:"F23847")
            </div>
        </div>
    </div>
</div>
<div id="benefits">
    <div class="row">
        <div class="eight columns">
            @Html.Ipsum().h3().p().h4().p()
        </div>
        <div class="four columns">
            @Html.Ipsum().h3().p(paragraphCount: 1, sentenceCount: 3)
            <p>
                <a href="#" class="nice orange button">Donate Now</a>
            </p>
        </div>
    </div>
</div>
@section scripts
{
<script type="text/javascript">
     $(window).load(function() {
         $('#rotator').orbit();
     });
</script>
}