@*The prototyping helper allows us to build fast demo code*@
@using Prototyping.Ipsum
@using Prototyping.Placeholdit
@*Begin showcase*@
<div id="showcase">
    <div class="row">
        <div class="six columns">             
            <h2>Keep up with the band</h2>
            <h4>Join us on Facebook</h4>
            <p class="action">
                <a href="#" class="nice large lppd button">Facebook Button</a>
            </p>
        </div>
        <div class="six columns">
            <div id="rotator">
                @Html.Placehold(width: 468, height: 304, text: "Band Practicing", backgroundColor:"A7D5F2")
                @Html.Placehold(width: 468, height: 304, text: "T-Shirt on a person", backgroundColor:"F2B807")
                @Html.Placehold(width: 468, height: 304, text: "Agency Patches", backgroundColor:"F23847")
                @Html.Placehold(width: 468, height: 304, text: "Set of Bagpipes", backgroundColor:"F23847")
            </div>
        </div>
    </div>
</div>
<div id="blank">
    <div class="row">
        <div class="eight columns">
            <h3>About Us</h3>
            @Html.Ipsum().p()
            <h3>Our Mission</h3>
            @Html.Ipsum().p()            
        </div>
        <div class="four columns">
            <h4>Accepting New Members</h4>
            @Html.Ipsum().p(paragraphCount: 1, sentenceCount: 3)
            <p>
                <a href="#" class="nice lppd button">Apply For Membership</a>
            </p>
        </div>
    </div>
</div>
@section scripts
{
<script type="text/javascript">
     $(window).load(function() {
         $('#rotator').orbit();
     });
</script>
}